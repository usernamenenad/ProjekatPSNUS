<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="PL" Height="720" Width="1280" ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <materialDesign:Card Margin="5">
                    <UniformGrid Columns="1">
                        <UniformGrid.Resources>
                            <Style x:Key="button1" BasedOn="{StaticResource MaterialDesignFlatSecondaryButton}" TargetType="Button">
                                <Setter Property="Margin" Value="25"/>
                                <Setter Property="Foreground" Value="#3d195b"/>
                            </Style>
                        </UniformGrid.Resources>
                        <Image Source="/Pictures/pllogo.png" HorizontalAlignment="Center" Width="190"/>
                        <Button Style="{StaticResource button1}">Timovi</Button>
                        <Button Style="{StaticResource button1}">Igrači</Button>
                        <Button Style="{StaticResource button1}">Pretraži tim</Button>
                        <Button Style="{StaticResource button1}">Pretraži igrače</Button>
                        <Button Style="{StaticResource button1}">Trenutna tabela</Button>
                        <Button Style="{StaticResource button1}">Istorija</Button>
                    </UniformGrid>
                </materialDesign:Card>
                </Grid>
                <Grid Grid.Column="1">
                <materialDesign:Card Margin="5" Background="#F6F5F8">
                </materialDesign:Card>
                </Grid>
        </Grid>
    </Grid>
</Window>
